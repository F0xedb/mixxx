  <SetVariable name="fxGroup_fxNum">[<Variable name="fxGroup"/>_Effect<Variable name="fxNum"/>]</SetVariable>
  <WidgetGroup>
    <ObjectName>EffectSlotParameters</ObjectName>
    <Layout>horizontal</Layout>
    <Size>max,45f</Size>
    <Children>
    
      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="fxKnobParameter">1</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="fxButtonParameter">1</SetVariable>
      </Template>
        
      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="fxKnobParameter">2</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="fxButtonParameter">2</SetVariable>
      </Template>
        
