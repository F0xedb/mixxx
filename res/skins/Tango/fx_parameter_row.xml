        <SetVariable name="fxKnobParameter">3</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="fxButtonParameter">3</SetVariable>
      </Template>
        
      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="fxKnobParameter">4</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="fxButtonParameter">4</SetVariable>
      </Template>
        
      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="fxKnobParameter">5</SetVariable>
      </Template>
      <Template src="skin:fx_parameter_button.xml">
        <SetVariable name="fxButtonParameter">5</SetVariable>
      </Template>
        
      <Template src="skin:fx_parameter_knob.xml">
        <SetVariable name="fxKnobParameter">6</SetVariable>
